{
    "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
    "editor.fontSize": 17,
    "editor.fontLigatures": true,

    "debug.console.fontFamily": "JetBrainsMono Nerd Font, monospace",
    "debug.console.fontSize": 15,

    "window.zoomLevel": 1,
    "window.customTitleBarVisibility": "windowed",
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,

    "editor.minimap.enabled": true,
    //"editor.rulers": [100, 120],
    "editor.scrollbar.verticalScrollbarSize": 4,
    "editor.scrollbar.horizontalScrollbarSize": 4,
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontal": "visible",
    "editor.accessibilitySupport": "off",
    "editor.tabSize": 4,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.fontWeight": "normal",
    "editor.fontVariations": true,
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.cursorBlinking": "blink",
    "editor.folding": true,

    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    
    "debug.openDebug": "neverOpen",

    "extensions.ignoreRecommendations": true,
    
    "workbench.iconTheme": "file-icons",
    "workbench.preferredDarkColorTheme": "Kanagawa Wave",
    "workbench.navigationControl.enabled": false,
    "workbench.preferredLightColorTheme": "Kanagawa Wave",

    "git.openRepositoryInParentFolders": "never",
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.blame.editorDecoration.enabled": false,

    "files.exclude": {
        ".godot": true,
        ".vscode": true,
        "**/*.import": true,
        "**/*.blend1": true,
        "**/*.aseprite": true,
        "**/*.ase": true,
        "**/*.translation": true,
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.gd": "${capture}.tscn, ${capture}.gd.uid, ${capture}.gdshader, ${capture}.gdshader.uid, ${capture}.blend, ${capture}.tres, ${capture}.png",
        "*.gdshader": "${capture}.gdshader.uid",
        "*.tscn": "${capture}.png, ${capture}.blend, ${capture}.gdshader, ${capture}.gdshader.uid, ${capture}.tres,"
    },

    "godotTools.editorPath.godot4": "/usr/bin/godot",
    "godotTools.inlayHints.gdscript": true,
    "godotTools.scenePreview.previewRelatedScenes": "anyFolder",
    "godotTools.documentation.pageScale": 200,

    "window.autoDetectColorScheme": true,
    "workbench.colorCustomizations": {
